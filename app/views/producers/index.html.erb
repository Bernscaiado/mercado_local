<div class="container mt-4 card-profile">
  <h1 class="text-center pt-3">Produtores do Mercado Local</h1>

  <div class="row ml-5">
    <% if @users.empty?%>
      <p><%= 'Nenhum produtor cadastrado'%><p>
    <%else%>
     <% @users.each do |user|  %>
      <div class="col-md-6 col-lg-4">
        <div class="card-product my-4 mr-4" style="width: 275px;">
              <div class="card-product-infos">
            <h2><%= link_to "Produtor: #{user.first_name} #{user.last_name}", producer_path(user) %></h2>
            <p><strong>Marca: <%= user.brand %></strong></p>
            <p><strong>Origem: <%= user.address %></strong></p>
            </div>
        </div>
      </div>
      <% end %>
    <% end  %>
  </div>
</div>
