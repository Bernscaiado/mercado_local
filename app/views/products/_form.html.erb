<%= simple_form_for @product do |f| %>
  <%= f.input :name, label: 'Nome' %>
  <%= f.input :description, label: 'Descrição' %>
  <%= f.input :category_id, collection: @category, label: 'Categoria' %>
  <%= f.input :price, label: 'Preço'  %>
  <%= f.input :quantity, label: 'Quantidade em estoque' %>
  <%= f.input :photo, as: :file, label: 'Foto'%>
  <%= f.button :submit, 'Adicionar o meu produto', class:"btn-outline-info"%>
<% end %>
