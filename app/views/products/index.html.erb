<div class="container">
  <h1>Produtos</h1>

<div class="row">
  <% if @products.empty?%>
      <p><%= 'Nenhum produto cadastrado'%><p>
  <%else%>
      <% @products.each do |product|  %>
    <div class="col-md-12 col-lg-6">
      <div class="card-product mt-4 mr-4">
        <% if product.photo.attached? %>
         <%= cl_image_tag product.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %>
        <%= image_tag('https://images.unsplash.com/photo-1452195100486-9cc805987862?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80') %>
      <% end %>
        <div class="card-product-infos">
          <h2><%= product.name %></h2>
          <p><strong><%= number_to_currency(product.price) %></strong></p>
            <%= link_to 'Adicionar ao carrinho', new_product_cart_path(product), class:"btn btn-light mt-2" %>
        </div>
      </div>
    </div>


      <% end %>
  <% end  %>
  </div>

  <%= link_to 'Criar um novo produto', new_product_path, class:"btn btn-outline-secondary mt-4"%>

</div>
