
 <div class="container mt-4" style="width: 500px;">
    <div class="card text-center">
      <% if @product.photo.attached? %>
         <%= cl_image_tag @product.photo.key, height: 400, width: 470, crop: :fill %>
      <% else %>
        <%= image_tag('https://images.unsplash.com/photo-1452195100486-9cc805987862?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80') %>
      <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= @product.name %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= @product.category.name %></li>
      <li class="list-group-item"><%= @product.description %></li>
      <li class="list-group-item">R<%= number_to_currency(@product.price) %></li>
      <li class="list-group-item"><%= @product.quantity %> un.</li>
    </ul>
    <% unless user_signed_in? && @product.user_id == current_user.id %>
      <div class="card-body">
        <% if @product.quantity == 0 %>
          <%= 'Produto indisponÃ­vel' %>
        <% else %>
          <%= link_to 'Adicionar ao carrinho', new_product_cart_path(@product), class:"btn btn-light mt-2" %>
        <% end %>
      </div>
    <% end %>
      <%= link_to 'Voltar aos Produtos', products_path, class:"btn btn-outline-secondary" %>
  </div>
 </div>
