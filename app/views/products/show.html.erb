
 <div class="container mt-4" style="width: 500px;">
    <div class="card text-center">
      <% if @product.photo.attached? %>
         <%= cl_image_tag @product.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %>
        <%= image_tag('https://images.unsplash.com/photo-1452195100486-9cc805987862?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80') %>
      <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= @product.name %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= @product.category.name %></li>
      <li class="list-group-item">R<%= number_to_currency(@product.price) %></li>
    </ul>
    <div class="card-body">
      <a href="#" class="card-link"><%= link_to image_tag("https://image.flaticon.com/icons/svg/126/126483.svg", style:"width: 25px;"), edit_product_path(@product) %></a>
      <a href="#" class="card-link"><%= link_to image_tag("https://image.flaticon.com/icons/svg/126/126468.svg", style:"width: 25px;"), product_path, method: :delete, data: { confirm: 'Are you sure?' } %></a>
    </div>
      <%= link_to 'Produtos', products_path, class:"btn btn-outline-secondary mt-3" %>
  </div>

 </div>
