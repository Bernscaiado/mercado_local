
 <div class="container mt-4" style="width: 500px;">
    <div class="card text-center">
    <img class="card-img-top" src="..." alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= @product.name %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= @product.category %></li>
      <li class="list-group-item"><%= number_to_currency(@product.price) %></li>
    </ul>
    <div class="card-body">
      <a href="#" class="card-link"><%= link_to image_tag("https://image.flaticon.com/icons/svg/126/126483.svg", style:"width: 25px;"), edit_product_path(@product) %></a>
      <a href="#" class="card-link"><%= link_to image_tag("https://image.flaticon.com/icons/svg/126/126468.svg", style:"width: 25px;"), product_path, method: :delete, data: { confirm: 'Are you sure?' } %></a>
    </div>
      <%= link_to 'Produtos', products_path, class:"btn btn-outline-secondary mt-3" %>
  </div>


 </div>
