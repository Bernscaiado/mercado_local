<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="#">
    <%= link_to image_tag('logo.png', style:"width: 130px; height: 130px;"), root_path %>
  </a>

  <!-- Search form -->
  <div class="collapse navbar-collapse ml-4 mr-4 " id="navbarSupportedContent">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="navbar-brand" href="#">
          <%= link_to image_tag('user.png', style:"width: 30px;"), myprofile_path %>
        </a>
      </li>
      <li class="nav-item">
        <a class="navbar-brand" href="#">
          <%= link_to image_tag('cart.png', style:"width: 30px;"), carts_path %>
        </a>
      </li>
      <li class="nav-item">
        <a class="navbar-brand" href="#">
          <%= link_to image_tag('products.png', style:"width: 30px;"), products_path %>
        </a>
        <li class="nav-item">
          <a class="navbar-brand" href="#">
          <%= link_to image_tag('farmer.png', style:"width: 30px;"), producers_path %>
          </a>
        </li>
      </li>
      <li class="nav-item dropdown">
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
        </div>
      </li>
    </ul>
    <div class="container">
      <%= form_tag search_path, method: :get, class: "w-100" do %>
      <div class="search-form-control form-group">
        <input class="form-control string required w-100" type="text" name="query" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Pesquisar
        </button>
      </div>
      <% end %>
    </div>
    <% if current_user.present? %>
      <%= link_to 'SAIR', destroy_user_session_path, style:'text-decoration: none;', method: :delete, class:"btn-navbar mr-4 ml-4" %>
    <% else %>
      <%= link_to 'ENTRAR', new_user_session_path, style:'text-decoration: none;', class:"btn-navbar mr-4 ml-4" %>
    <% end %>
  </div>
</div>

