<div class="container">
  <h1>Perfil do usuário</h1>

  Nome completo: <%= current_user.first_name %> <%= current_user.last_name %>
  <br>
  E-mail: <%= current_user.email %>
  <br>
  Username: <%= current_user.username %>
  <br>
  Endereço: <%= current_user.address %>

  <table class='table mt-5'>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Preço</th>
        <th>Categoria</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.category %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    </tbody>
  </table>
  <% if current_user.role %>
    <%= link_to 'Adicionar produto', new_product_path %>
  <% end %>
</div>

