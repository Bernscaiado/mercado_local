<div class="container mt-4">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :username, label: 'Nome de usuÃ¡rio',
                required: true,
                autofocus: true %>
    <%= label_tag(:role, "Eu sou produtor") %>
    <%= f.check_box(:role) %>
    <%= f.input :first_name, label: 'Nome',
                required: true,
                autofocus: true %>
    <%= f.input :last_name, label: 'Sobrenome',
                required: true,
                autofocus: true %>
    <%= f.input :password, label: 'Senha',
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: 'Confirme a senha',
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

    <div class="container">
      <div class="row">
        <div class="form-actions">
      <%= f.button :submit, "Sign up", class:"btn btn-outline-secondary mr-3" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>

      </div>
    </div>

</div>
